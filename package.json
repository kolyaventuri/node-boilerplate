{
  "name": "boilerplate",
  "version": "0.0.0",
  "private": true,
  "main": "app.js",
  "scripts": {
    "start": "node ./bin/start",
    "dev": "nodemon --ignore src/**/* --exec node ./bin/start",
    "build": "webpack --config ./webpack/webpack.prod.js --progress --colors",
    "test": "xo && jest",
    "flow": "flow",
    "lint": "xo"
  },
  "dependencies": {
    "@babel/core": "^7.1.5",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.5",
    "@babel/preset-flow": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "body-parser": "^1.16.1",
    "cookie-parser": "^1.4.3",
    "debug": "^3.0.0",
    "express": "^4.15.4",
    "morgan": "^1.8.2",
    "node-sass": "^4.10.0",
    "react": "^16.6.3",
    "react-redux": "^5.1.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "sass-loader": "^7.1.0",
    "serve-favicon": "^2.4.3",
    "style-loader": "^0.23.1",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-dev-server": "^3.1.10",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-merge": "^4.1.4"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-loader": "^8.0.4",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-xo": "^0.25.0",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-babel": "^5.2.1",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.86.0",
    "jest": "^23.6.0",
    "jest-enzyme": "^7.0.1",
    "nodemon": "^1.18.6",
    "pre-commit": "^1.2.2",
    "xo": "^0.23.0"
  },
  "pre-commit": [
    "lint"
  ],
  "xo": {
    "parser": "babel-eslint",
    "space": true,
    "extends": [
      "xo-react/space",
      "plugin:flowtype/recommended"
    ],
    "plugins": [
      "babel",
      "flowtype"
    ],
    "rules": {
      "babel/semi": true
    },
    "settings": {
      "react": {
        "version": "16.5"
      }
    },
    "env": [
      "browser",
      "node"
    ],
    "ignore": [
      "webpack/**/*.js",
      "jest.config.js"
    ],
    "overrides": [
      {
        "files": "spec/**/*.js",
        "globals": [
          "jest",
          "test",
          "expect",
          "describe",
          "beforeAll",
          "afterAll",
          "beforeEach",
          "afterEach"
        ]
      }
    ]
  }
}
